from flask import Flask

# Crea una instancia de la aplicación Flask
app = Flask(__name__)

# Define la ruta principal (/)
@app.route('/')
def home():
    return '¡Hola, mundo desde Flask! Esta es la página de inicio.'

# Define una segunda ruta para la página "Acerca de"
@app.route('/about')
def about():
    return 'Esta es la página "Acerca de".'

# Bloque para ejecutar la aplicación
if __name__ == '__main__':
    # El modo debug=True permite recargar el servidor automáticamente al guardar cambios
    app.run(debug=True)


CREATE TABLE CLIENTE (
    id_cliente INT PRIMARY KEY AUTO_INCREMENT,
    nombre VARCHAR(50) NOT NULL,
    apellido VARCHAR(50) NOT NULL,
    telefono VARCHAR(20),
    email VARCHAR(100) UNIQUE
);



CREATE TABLE PLATILLO (
    id_platillo INT PRIMARY KEY AUTO_INCREMENT,
    nombre_platillo VARCHAR(100) NOT NULL,
    descripcion TEXT,
    precio DECIMAL(10, 2) NOT NULL
);



CREATE TABLE PEDIDO (
    id_pedido INT PRIMARY KEY AUTO_INCREMENT,
    fecha_hora DATETIME NOT NULL,
    estado VARCHAR(50) NOT NULL,
    id_cliente INT,
    FOREIGN KEY (id_cliente) REFERENCES CLIENTE(id_cliente)
);
